<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="#FFFFFF"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="20dp"
                android:height="10dp"
                />
            <stroke
                android:width="3dp"
                android:color="#d0329d"
                />
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="#AAAAAA"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="20dp"
                android:height="10dp"
                />
            <stroke
                android:width="3dp"
                android:color="#d0329d"
                />

        </shape>
    </item>
</selector>